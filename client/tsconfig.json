{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "node", // Change to "node"
        "allowImportingTsExtensions": false, // Change to true
        "resolveJsonModule": true,
        "isolatedModules": false, // Change to false
        "noEmit": false,
        "jsx": "react-jsx",

        /* Linting */
        "strict": false,
        "noUnusedLocals": false, // Change to false
        "noUnusedParameters": false, // Change to false
        "noFallthroughCasesInSwitch": false, // Change to false

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@components/core/*": ["./src/components/ui/core/*"],
            "@components/common/*": ["./src/components/ui/common/*"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
